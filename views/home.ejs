    <!-- //***** Articles Section  -->
    <div class="Arts_sec">
      <div class="sec__title">
        <h1>CHECK OUT</h1>
      </div>
      <div class="articles_wrapper">
        <% for(let i = 0; i <3;i++) { %>
        <article>
          <!-- prettier-ignore -->
          <img src=<%= artl[i].image_pathLocation %> alt="cover"/>
          <div class="metData">
            <div class="poster_pic">
              <!-- prettier-ignore -->
              <img src=<%=artl[i].admin_img_path %> alt="author" />
            </div>

            <span id="TAG"><%=artl[i].tag_name %></span>
            <p class="Art_date"><%=artl[i].article_created_at%></p>
          </div>

          <h1><a href=""><%=artl[i].article_title %></a></h1>
        </article>
        <% } %>
      </div>
    </div>

    <!-- //***** contactUS Section  -->
    <section id="contactUS">
      <div class="sec__title">
        <h1>Contact us</h1>
      </div>
      <div id="map"></div>

      <div class="contactUs__form">
        <form method="POST" action="/sub_thk">
          <div class="name_eml">
            <input
              type="text"
              name="contactor"
              id="contactor_name"
              placeholder="Name"
              required
            />
            <input
              type="email"
              name="contactor_email"
              id="contactor_email"
              placeholder=" Email"
              required
            />
          </div>

          <input
            type="text"
            name="contactor_sub"
            id="contactor_sub"
            placeholder="Subject"
            required
          />
          <textarea
            name="contactor_msg"
            id="contactor_msg"
            cols="30"
            rows="10"
            placeholder="Your message"
            required
          ></textarea>

          <button type="submit">
            <span>SEND</span>
            <i class="fa-solid fa-paper-plane"></i>
          </button>
        </form>
      </div>
    </section>

    <section id="sub__newsSheet">
      <form action="/thnkpage" method="post">
        <div class="sub__container">
          <img src="./images/undraw_confidential_letter_w6ux.svg" alt="draw" />
          <p>
            Subscribe to our newsletter in order to not miss any new arrivals
            articles in our Blog.
          </p>
          <div class="sub__btn_wrapper">
            <input
              type="email"
              name="new_email"
              id="sub_email"
              placeholder="Email-adress"
            />
            <button type="submit">Subscribe</button>
          </div>
        </div>
      </form>
    </section>
